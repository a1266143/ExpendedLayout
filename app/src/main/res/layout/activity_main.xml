<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <com.xiaojun.expendedview.ExpendedLayout
        android:id="@+id/expendedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lee_titleText="优惠方式"
        app:lee_titleSize="14dp"
        />

    <com.xiaojun.expendedview.ExpendedLayout
        android:id="@+id/expendedLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lee_titleSize="14dp"
        app:lee_titleText="收款方式"
        />

    <com.xiaojun.expendedview.ExpendedLayout
        android:id="@+id/expendedLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lee_titleLayoutHeight="100dp"
        app:lee_titleText="收银备注"
        app:lee_rightDownIcon="@drawable/ic_launcher_foreground"
        app:lee_titleBackgroundColor="@android:color/holo_blue_bright"
        app:lee_titleSize="14dp"
        />

        <com.xiaojun.expendedview.ExpendedLayout
            android:id="@+id/expendedLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lee_titleBackgroundColor="@color/colorPrimary"
            app:lee_titleSize="14dp"
            app:lee_titleText="收款方式4"
            />

        <com.xiaojun.expendedview.ExpendedLayout
            android:id="@+id/expendedLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lee_titleBackgroundColor="@color/colorPrimary"
            app:lee_titleSize="14dp"
            app:lee_titleText="TEST"
            />

        <com.xiaojun.expendedview.ExpendedLayout
            android:id="@+id/expendedLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lee_titleBackgroundColor="@color/colorPrimary"
            app:lee_titleSize="14dp"
            app:lee_titleText="TEST2"
            />

        <com.xiaojun.expendedview.ExpendedLayout
            android:id="@+id/expendedLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lee_titleBackgroundColor="@color/colorPrimary"
            app:lee_titleSize="14dp"
            app:lee_titleText="TEST3"
            />

    </LinearLayout>

</ScrollView>